<%- include('../Includes/begin.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-sb-admin-2/4.1.3/css/sb-admin-2.css">
<link rel="stylesheet" href="../CSS/admin-dashboard.css">
<link rel="stylesheet" href="../CSS/admin-profile.css">

<div class="container-fluid">

    <div id="wrapper">

        <%- include('../Includes/admin_nav.ejs') %>

        <section id="content-wrapper">
            <main role="main" class="pt-5 main">
                <!-- Header -->
                <div class="row mb-5">
                    <div class="col-sm-3">
                        <div class="card" style="box-shadow: 0 1rem 2rem 0 rgba(41, 107, 183, 0.15) !important;">
                            <div class="card-header text-white" style="background-color: #df4e5e;">
                                <div class="col-xs-3">
                                    <i class="fa ffa-solid fa-video fa-4x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div><%-videos %></div>
                                    <div>Videos</div>
                                </div>
                            </div>
                            <a href="/admin/getAllVideo">
                                <div class="card-footer text-white" style="background-color: #df4e5e;">
                                    <span class="float-left">View Details</span>
                                    <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="card" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                            <div class="card-header bg-success text-white">
                                <div class="col-xs-3">
                                    <i class="fa fa-solid fa-book fa-4x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge"><%-documents %></div>
                                    <div>Documents</div>
                                </div>
                            </div>
                            <a href="/admin/getAllDoc">
                                <div class="card-footer bg-success text-white">
                                    <span class="float-left">View Details</span>
                                    <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="card" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                            <div class="card-header bg-warning text-white">
                                <div class="col-xs-3">
                                    <i class="fas fa-sharp fa-regular fa-headphones fa-4x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge"><%-audios %></div>
                                    <div>Audio</div>
                                </div>
                            </div>
                            <a href="/admin/getAllAudios">
                                <div class="card-footer bg-warning text-white">
                                    <span class="float-left">View Details</span>
                                    <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <%- include('../Includes/admin_end.ejs') %>