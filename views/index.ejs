<body>

    <section id="content-wrapper">
        <main role="main" class="pt-5 main">
            <div class="header text-center pt-5 pt-lg-4">
                <h1>Welcome To <span style="font-family: 'Pacifico', cursive; font-size: 2rem; color: #F06292;">EduStream Hub</span></h1>
            </div>

            <hr>

            <div class="container">
                <div class="row">
                    <div class="col-md-6 m-auto">
                        <div class="card card-body"
                            style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> LOGIN</h1>
                            <!-- Login buttons for homepage -->
                            <button style="background-color: #009688;" class="btn btn-block"
                                onclick="location.href = '/admin/login'">
                                <a style="color: white;">ADMIN LOGIN</a>
                            </button>
                            <br>
                            <button style="background-color: #7E57C2;" class="btn btn-block"
                                onclick="location.href = '/user/login'">
                                <a style="color: white;">USER LOGIN</a>
                            </button>

                        </div>
                    </div>
                </div>
            </div>

        </main>
    </section>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
